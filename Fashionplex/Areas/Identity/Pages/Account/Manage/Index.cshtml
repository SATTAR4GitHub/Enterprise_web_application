@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"] Details</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Username" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Username" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-3 col-form-label"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="col-sm-9">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <div class="col-sm-9">
                        <input asp-for="Input.Email" class="form-control" />
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                    </div>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.FirstName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.LastName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.AddressLine1" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.AddressLine1" class="form-control" />
                </div>
                <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.AddressLine2" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.AddressLine2" class="form-control" />
                </div>
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Country" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Country" class="form-control" />
                </div>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.BirthDate" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.BirthDate" class="form-control" />
                </div>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3"></label>
                <div class="col-sm-9">
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}