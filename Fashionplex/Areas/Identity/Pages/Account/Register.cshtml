@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.FirstName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.LastName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.AddressLine1" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.AddressLine1" class="form-control" />
                </div>
                <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.AddressLine2" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.AddressLine2" class="form-control" />
                </div>
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Country" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Country" class="form-control" />
                </div>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.BirthDate" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.BirthDate" class="form-control" />
                </div>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
