@model IEnumerable<Category>

<h5 class="category__heading">Categories</h5>

@foreach (var category in Model)
{
  <div class="category__list-wrapper">
    @if (category.Slug == (string)@ViewData["SelectedCategory"])
    {
      <a href="/product/@category.Slug/@ViewData["SelectedBrand"]/" class="category__selected">@category.CategoryName</a>
    }
    else
    {
      <a href="/product/@category.Slug/@ViewData["SelectedBrand"]/" class="category__not-selected">@category.CategoryName</a>
    }
  </div>
}

