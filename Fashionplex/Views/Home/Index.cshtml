@{
    ViewData["Title"] = "Home Page";
}



<div class="container mt-5">
    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-md-10">

            <div class="container mb-1 text-center border border-info">
                <h2 class="pt-2 font-weight-bold"><i class="fa fa-bullhorn" aria-hidden="true"></i> Hurrah! Enter Store 30% Off! </h2>
            </div>
            <div class="">
                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                <img class="w-100" src="~/images/banner-logo/banner1.jpg" alt="First slide" height="400">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row ">
                                <img class="w-100" src="~/images/banner-logo/banner2.jpg" alt="First slide" height="400">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row ">
                                <img class="w-100" src="~/images/banner-logo/banner3.jpg" alt="First slide" height="400">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

